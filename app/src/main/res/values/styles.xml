<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.WallETH.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
    </style>

    <style name="Theme.WallETH.Dark" parent="Theme.MaterialComponents.NoActionBar">
    </style>

    <style name="Base.Theme.YourApp.DayNight" parent="Theme.WallETH.Light" />

    <style name="Theme.WallETH.DayNight" parent="Base.Theme.YourApp.DayNight">
        <!-- your light/dark theme independent attributes -->
    </style>

    <style name="AppTheme" parent="Theme.WallETH.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/wallethActionBar</item>
        <item name="actionBarTheme">@style/wallethActionBarThemeOverlay</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat</item>
    </style>

    <style name="PopupStyle" parent="AppTheme">
        <item name="android:textColorPrimary">@color/fgColor</item>
        <item name="actionMenuTextColor">@color/fgColor</item>
        <item name="android:textColorSecondary">@color/fgColor</item>
</style>

    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/onAccent</item>
        <item name="iconTint">@color/onAccent</item>
    </style>

    <style name="FABStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/onAccent</item>
    </style>

    <style name="wallethActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <!-- action bar background - without android prefix -->
        <item name="background">@color/colorPrimary</item>
        <!-- action bar elevation - without android prefix -->
        <item name="elevation">4dp</item>
    </style>

    <style name="wallethActionBarThemeOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- title text color -->
        <item name="android:textColorPrimary">@android:color/black</item>
        <!-- subtitle text color -->
        <item name="android:textColorSecondary">?android:textColorPrimary</item>
        <!-- action menu item text color -->
        <item name="actionMenuTextColor">?android:textColorPrimary</item>
        <!-- action menu item icon color -->
        <item name="colorControlNormal">?android:textColorPrimary</item>

        <item name="colorControlHighlight">?android:textColorPrimary</item>
        <item name="android:textColorHint">?android:textColorPrimary</item>
        <item name="android:editTextColor">?android:textColorPrimary</item>
    </style>

    <style name="button_small">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>
    <style name="button">
        <item name="android:padding">8dp</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>
    <style name="password_textinputlayout">
        <item name="passwordToggleEnabled">true</item>
    </style>
    <style name="section_header">
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="topright_indicator">
        <item name="android:layout_gravity">top|right</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    <style name="topright_indicator_icon" parent="topright_indicator">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
    </style>
</resources>
